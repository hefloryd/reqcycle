              label="Change Style"
              style="push"
              tooltip="Select style configuration">
        </command>
     </menuContribution>
  </extension>
<extension
      point="org.eclipse.ui.commands">
   <command
         defaultHandler="org.polarsys.reqcycle.styling.ui.handler.StyleModelChooserHandler"
         id="org.polarsys.reqcycle.styling.ui.stylemodel"
         name="Choose Display">
   </command>
</extension>
<extension
      point="org.polarsys.reqcycle.utils.inject.binding">
   <binding
         impl="org.polarsys.reqcycle.styling.ui.impl.StylingManager"
         interface="org.polarsys.reqcycle.styling.ui.IStylingManager">
   </binding>
</extension>
