<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="stylingpic" name="Styling Picture" schema="schema/stylingpic.exsd"/>
<extension
        point="org.eclipse.ui.navigator.navigatorContent">
     <navigatorContent
           appearsBefore="org.polarsys.reqcycle.repository.ui.requirementNavigatorContent"
           contentProvider="org.polarsys.reqcycle.styling.ui.providers.StylingContentProvider"
           id="org.polarsys.reqcycle.repository.ui.styleNavigatorContent"
           labelProvider="org.polarsys.reqcycle.styling.ui.providers.StylingLabelProvider"
           name="StyleNavigatorContent"
           priority="high">
        <triggerPoints>
           <or>
              <instanceof
                    value="org.polarsys.reqcycle.repository.ui.navigator.NavigatorRoot">
              </instanceof>
              <instanceof
                    value="java.lang.String">
              </instanceof>
           </or>
        </triggerPoints>
        <override
              policy="InvokeOnlyIfSuppressedExtAlsoVisibleAndActive"
              suppressedExtensionId="org.polarsys.reqcycle.repository.ui.requirementNavigatorContent">
        </override>
        <dropAssistant
              class="org.polarsys.reqcycle.styling.ui.dnd.ReqDropAdapterAssistant"
              id="org.polarsys.reqcycle.repository.ui.dropAssistant.dnd">
           <possibleDropTargets>
              <or>
                 <instanceof
                       value="org.polarsys.reqcycle.repository.data.RequirementSourceData.Requirement">
                 </instanceof>
                 <instanceof
                       value="java.lang.Object">
                 </instanceof>
              </or></possibleDropTargets>
        </dropAssistant>
        <possibleChildren>
           <or>
              <adapt
                    type="org.polarsys.reqcycle.uri.model.Reachable">
              </adapt>
           </or>
        </possibleChildren>
     </navigatorContent>
  </extension>
